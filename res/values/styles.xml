<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SeparatorItemView" parent="GreenDroid.Widget.ItemView.SeparatorItemView">
        <item name="android:background">@drawable/separator_bg</item>
    </style>
    
    <style name="TextAppearanceLarge" parent="@style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TableRow">
        <item name="android:width">0dip</item>
    </style>
    
    <style name="TableRowLeft" parent="@style/TableRow">
        <item name="android:layout_weight">.5</item>
    </style>
    
    <style name="TableRowRight" parent="@style/TableRow">
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_marginRight">3dip</item>
    </style>
    
    <style name="TableRowRight1" parent="@style/TableRow">
        <item name="android:layout_weight">.3</item>
        <item name="android:paddingLeft">9dip</item>
        <item name="android:paddingRight">9dip</item>
    </style>
    
    <style name="TableRowRight2" parent="@style/TableRowRight">
        <item name="android:layout_weight">.2</item>
    </style>
    
    <style name="TableRowRight3" parent="@style/TableRowRight">
        <item name="android:layout_weight">.1</item>
    </style>
</resources>
